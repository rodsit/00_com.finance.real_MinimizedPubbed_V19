<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:background="#444444"
    android:layout_height="fill_parent"
    >
    <ScrollView   
        android:id="@+id/ScrollView01"
      android:layout_height="fill_parent" 
      android:background="#444444"  
      android:layout_width="fill_parent" > 
<RelativeLayout 
    android:layout_width="fill_parent"
    android:background="#444444"  
    android:layout_height="fill_parent">
<ImageButton android:textColor="#ffffff" 
android:src="@drawable/button"
android:padding="0sp"
android:layout_centerHorizontal="true"
android:id="@+id/Button01" 
android:textSize="24dip" 
android:layout_margin="15dip"
android:layout_width="wrap_content" 
android:hapticFeedbackEnabled="true"
android:layout_height="wrap_content"></ImageButton>
 
<Button android:id="@+id/Button05" android:layout_below="@+id/Button01" android:padding="0dip" android:layout_centerHorizontal="true" android:layout_marginTop="20dip" android:layout_marginBottom="50dip"  android:drawableLeft="@drawable/sound" android:layout_width="50dip" android:layout_height="50dip"></Button>
<Button android:id="@+id/Button06"  android:layout_marginTop="20dip" android:layout_below="@+id/Button01" android:padding="0dip" android:layout_marginLeft="40dip" android:layout_marginBottom="50dip" android:layout_centerHorizontal="true"  android:drawableRight="@drawable/info" android:layout_toRightOf="@+id/Button05" android:layout_width="50dip" android:layout_height="50dip"></Button>

<TextView android:layout_below="@+id/Button06"   android:id="@+id/TextView02" android:layout_marginTop="1dip"  android:layout_centerHorizontal="true" android:layout_marginBottom="30dip" android:textColor="#ccccff" android:textStyle="bold" android:textSize="30dip"  android:layout_width="wrap_content" android:layout_height="wrap_content"></TextView>
<TextView android:layout_below="@+id/TextView02" android:id="@+id/TextView03" android:layout_marginTop="5dip"  android:layout_marginLeft="55dip"   android:layout_marginRight="55dip" android:layout_marginBottom="15dip" android:textColor="#ffffff" android:textStyle="bold" android:textSize="30dip"  android:layout_width="wrap_content" android:layout_height="wrap_content"></TextView>

</RelativeLayout>
</ScrollView>
</LinearLayout>